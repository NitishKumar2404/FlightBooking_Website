<%= form_with(model: flight) do |form| %>
  <% if flight.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(flight.errors.count, "error") %> prohibited this flight from being saved:</h2>

      <ul>
        <% flight.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :flight_id %>
    <%= form.text_field :flight_id %>
  </div>

  <div class="field">
    <%= form.label :category %>
    <%#= form.text_field :category %>
    <%= form.select :category, ["Jumbo", "Private", "Small"]%>
  </div>

  <div class="field">
    <%= form.label :manufacturer %>
    <%= form.text_field :manufacturer %>
  </div>

  <div class="field">
    <%= form.label :source %>
    <%= form.text_field :source %>
  </div>

  <div class="field">
    <%= form.label :destination %>
    <%= form.text_field :destination%>
    <%#= flight.errors.add(:destination,'cannot be same as source') if :source.value == :destination.value %>
  </div>


  <div class="field">
    <%= form.label :capacity %>
    <%= form.text_field :capacity %>
  </div>

  <div class="field">
    <%= form.label :status %>
    <%#= form.text_field :status %>
    <%= form.select :status, options_for_select([["Available"], ["Complete"]])%>
  </div>

  <div class="field">
    <%= form.label :cost %>
    <%= form.text_field :cost %>
  </div>


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

